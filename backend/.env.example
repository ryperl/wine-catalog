# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://admin:YOUR_MONGODB_PASSWORD@localhost:27017/wine_catalog?authSource=admin

# JWT Configuration
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_MINIMUM_32_CHARACTERS
JWT_EXPIRES_IN=7d

# Test User Configuration (for seeding and testing)
TEST_EMAIL=testuser@example.com
TEST_PASSWORD=your_test_password

# Development Only - Change these for production
MONGO_INITDB_ROOT_PASSWORD=YOUR_MONGODB_ROOT_PASSWORD
MONGO_EXPRESS_PASSWORD=YOUR_MONGO_EXPRESS_PASSWORD
